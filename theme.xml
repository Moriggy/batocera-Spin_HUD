<theme defaultView="Hyperspin">

	<formatVersion>7</formatVersion>
	<include>./config.xml</include>
	
	<!-- Subset options for help -->
	
	<subset name="helpsystem" displayName="${helpSubsetName}">
		<include name="colored" displayName="${colored}">./art/colorhelp.xml</include>
		<include name="standard"/>
	</subset>
	
	<view name="screen">
		<text name="clock">
			<textColor>${colorHora}</textColor>
			<color>${colorHora}</color>
			<fontSize>0.023</fontSize>
			<fontPath>./art/moonhouse.ttf</fontPath>
			<pos>0.905 0.954</pos>
			<size>0.062 0.031</size>
			<alignment>right</alignment>
			<verticalAlignment>center</verticalAlignment>
		</text>
		
		<controllerActivity name="controllerActivity">
			<pos>0.01 0.012</pos>
			<size>0.12 0.025</size>
			<itemSpacing>0.003</itemSpacing>
			<imagePath>./art/gamepad.svg</imagePath>
			<color>FFFFFF80</color>
			<activityColor>A0A0FFC0</activityColor>
			<hotkeyColor>FFA0A0C0</hotkeyColor>
		</controllerActivity>
	</view>
  
	<view name="menu">

		<menuText name="menutitle">
			<fontPath>./art/amiga4ever.ttf</fontPath>
			<fontSize>0.034</fontSize>
			<color>${menucolortitulo}</color>
		</menuText>
		
		<menuText name="menufooter">
			<fontPath>./art/amiga4ever.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>777777FF</color>
		</menuText>
		
		<menuText name="menutext">
			<fontPath>./art/amiga4ever.ttf</fontPath>
			<fontSize>0.022</fontSize>
			<color>${menucolortexto}</color>
			<separatorColor>${menucolorseparador}</separatorColor>
			<selectorColor>${baseColor}</selectorColor>
			<selectorColorEnd>${gradientEndColor}</selectorColorEnd>
			<selectedColor>${menucolortextoselecionado}</selectedColor>
			<selectorGradientType>vertical</selectorGradientType>
		</menuText>
		
		<menuTextSmall name="menutextsmall">
			<fontPath>./art/amiga4ever.ttf</fontPath>
			<fontSize>0.015</fontSize>
			<color>${menucolortitulo}</color>
		</menuTextSmall>

		<menuBackground name="menubg">
			<path>./art/Holograma.png</path>
			<cornerSize>45 45</cornerSize>
		</menuBackground>
		
		<menuTextEdit name="menutextedit">
			<inactive>./art/textinput_ninepatch.png</inactive>
			<active>./art/textinput_ninepatch_active.png</active>
		</menuTextEdit>
		
		<menuGroup name="menugroup">
			<fontPath>./art/amiga4ever.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<color>ffffff</color>
			<separatorColor>7b868a</separatorColor>    
			<backgroundColor>5fc9f880</backgroundColor>
			<lineSpacing>2</lineSpacing>
		</menuGroup>
		
		<menuIcons name="menuicons">
			<iconKodi>./art/icons/Kodi.png</iconKodi>
			<iconSystem>./art/icons/System.png</iconSystem>
			<iconUpdates>./art/icons/Updates.png</iconUpdates>
			<iconGames>./art/icons/Games.png</iconGames>
			<iconControllers>./art/icons/Controllers.png</iconControllers>
			<iconUI>./art/icons/UI.png</iconUI>
			<iconSound>./art/icons/Sound.png</iconSound>
			<iconNetwork>./art/icons/Network.png</iconNetwork>
			<iconScraper>./art/icons/Scraper.png</iconScraper>
			<iconAdvanced>./art/icons/Advanced.png</iconAdvanced>
			<iconQuit>./art/icons/Quit.png</iconQuit>
			<iconRestart>./art/icons/Restart.png</iconRestart>
			<iconShutdown>./art/icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./art/icons/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>./art/icons/Contest.png</iconRetroachievements>
		</menuIcons>
	
	</view>
	
	<view name="system">
			
		<!-- Musica -->
	
		<sound name="directory">
			<path>./art/musica</path>			
		</sound>

		<!-- Imagen de fondo estatica -->
		
		<image name="background" extra="true">
			<path>./art/fondo.png</path>
			<maxSize>1 1</maxSize>
			<pos>0 0</pos>
			<zIndex>1</zIndex>
		</image>
			
		<!-- Logo de sistema -->
		
		<image name="logo">
			<path>./art/logos/${system.theme}.png</path>
		</image>
		
		<!-- Texto de sistema si falta logo -->
		
		<text name="logoText">
			<fontSize>0.04</fontSize>
			<fontPath>./art/amiga4ever.ttf</fontPath>
			<color>${baseColor}</color>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<carousel name="systemcarousel">
			<type>vertical_wheel</type>
			<pos>0.297 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>FFFFFF00</color>
			<logoScale>1.7</logoScale>
			<logoSize>0.2 0.15</logoSize>
			<logoRotation>7</logoRotation>
			<logoRotationOrigin>5.5 0.5</logoRotationOrigin>
			<logoAlignment>center</logoAlignment>
			<maxLogoCount>5</maxLogoCount>
			<zIndex>2</zIndex>	 
		</carousel>
		
		<!-- Puntero de sistemas -->

		<image name="logo2" extra="true">
			<tile>false</tile>
			<path>./art/pointer/${system.theme}.png</path>
			<origin>1 0.5</origin>
			<pos>0.999 0.5</pos>
			<size>0.039 0.13</size>
			<color>FFFFFFFF</color>
			<zIndex>2</zIndex>
		</image>

		<!-- Numero de juegos del sistema -->
		
		<text name="systemInfo">
			<pos>-0.14 0.60</pos>
			<size>0.980 0.050</size>
			<alignment>right</alignment>
			<backgroundColor>0000FF00</backgroundColor>
			<color>${systemInfoColor}</color>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
			<reflexion>0.35 0.0</reflexion>
			<zIndex>2</zIndex>
		</text>
			
	</view>
	
	<view name="system,grid,detailed">
		<helpsystem name="help">
			<textColor>${pauseColorTexto}</textColor>
			<iconColor>${pauseColorIconos}</iconColor>
		</helpsystem>
	</view>
	
	<view name="grid">
	
		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>${backgroundImage}</path>
			<zIndex>1</zIndex>
		</image>
		
		<image name="logo">
			<pos>0.5 0.1</pos>
			<maxSize>0.3 0.126</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>3</zIndex>
		</image>
		
		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>   
			<size>1 0.065</size>
			<path>./art/bottom.png</path>      
			<color>${bottomBarColor}</color>
			<zIndex>20</zIndex>
		</image>
	
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
		  <color>A0A0B000</color>
		  <fontPath>./art/zeldadxt.ttf</fontPath>
			<fontSize>0.017</fontSize>
		</text>
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		  <color>ffffff00</color>
		  <fontPath>./art/zeldadxt.ttf</fontPath>
			<fontSize>0.017</fontSize>
		</text>
		<datetime name="md_releasedate, md_lastplayed">
		  <color>ffffff00</color>
		  <fontPath>./art/zeldadxt.ttf</fontPath>
			<fontSize>0.017</fontSize>
		</datetime>
		<rating name="md_rating">
		  <pos>0.88 0.88</pos>
		  <size>0.05 0.03</size>
		  <color>FFFFFF</color>
		  <unfilledColor>808080</unfilledColor>
		</rating>
		
		<imagegrid name="gamegrid">
		  <margin>0.005 0.010</margin>
		  <pos>0.025 0.16</pos>
		  <size>0.950 0.34</size>
		  <padding>0.03 0.03 0.03 0.1</padding>
		  <zIndex>2</zIndex>
		  <autoLayout>5 2</autoLayout>
		  <autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
		  <animateSelection>true</animateSelection>
		  <centerSelection>false</centerSelection>	  
		</imagegrid>
		
		<gridtile name="default">
		  <backgroundColor>FFFFFF00</backgroundColor>
		  <backgroundCornerSize>9 9</backgroundCornerSize>
		  <selectionMode>image</selectionMode>
		  <padding>5 5</padding>
		  <imageColor>FFFFFFB0</imageColor>
		</gridtile>
		<gridtile name="selected">
		  <backgroundCenterColor>${centerFadeColor}</backgroundCenterColor>
		  <backgroundEdgeColor>${bottomBarColor}</backgroundEdgeColor>
		  <imageColor>FFFFFFFF</imageColor>
		</gridtile>
		<text name="gridtile">
		  <color>D0D0D0</color>
		  <backgroundColor>00000000</backgroundColor>
		  <fontSize>0.022</fontSize>
		  <alignment>center</alignment>
		  <size>1 0.24</size>
		</text>
		<text name="gridtile:selected">
		  <color>FFFFFF</color>
		  <glowColor>${glowColor}</glowColor>
		  <glowSize>3</glowSize>
		</text>

		<ninepatch name="gridtile.background:selected">
		  <animateColor>EFEF60B0</animateColor>
		  <animateColorTime>350</animateColorTime>
		</ninepatch>

	</view>
  
  <customView name="Hyperspin" inherits="grid" tinyScreen="false">
		
		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/gamelist.png</path>
			<zIndex>2</zIndex>
		</image>
		
		<helpsystem name="help">
			<pos>2 2</pos>
		</helpsystem>
		
		<!-- Puntero de sistemas -->

		<image name="logo2" extra="true">
			<tile>false</tile>
			<path>./art/pointer/${system.theme}.png</path>
			<origin>1 0.5</origin>
			<pos>0.999 0.5</pos>
			<size>0.039 0.13</size>
			<color>FFFFFFFF</color>
			<zIndex>2</zIndex>
		</image>
		
		<video name="md_video">
			<pos>0.3 0.55</pos>
			<maxSize>0.50 0.50</maxSize>
			<origin>0.5 0.5</origin>
			<delay>0.1</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<loops>5</loops>
			<roundCorners>0.02</roundCorners>
			<zIndex>1</zIndex>
		</video>
	
		<image name="md_image">
			<default>./art/marquees/${system.theme}.png</default>
			<pos>0.3 0.12</pos>
			<size>0.43 0.19</size>
			<origin>0.5 0.5</origin>
			<zIndex>1</zIndex>
		</image>
	
		<rating name="md_rating">
			<pos>0.26 0.24</pos>
			<size>0.05 0.03</size>
			<filledPath>./art/get-hot-1.png</filledPath>
			<unfilledPath>./art/get-hot-0.png</unfilledPath>
		</rating>	

    <text name="md_name">
      <color>ffffffff</color>
      <pos>2 2</pos>
      <size>0.92 0.10</size>
      <alignment>center</alignment>
      <glowColor>00000016</glowColor>
      <glowSize>4</glowSize>
    </text>
    <text name="md_developer">
      <color>808080ff</color>
      <pos>2 2</pos>
      <size>0.92 0.10</size>
      <alignment>center</alignment>
      <fontSize>0.020</fontSize>
      <glowColor>00000016</glowColor>
      <glowSize>3</glowSize>
    </text>
	
		<imagegrid name="gamegrid">
			<imageSource>wheel</imageSource>
			<zIndex>3</zIndex>
			<pos>0.6735 0.02</pos>
			<size>0.29 1.13</size>
			<padding>0.05 0.14 0.05 0.30</padding>
			<scrollDirection>vertical</scrollDirection>
			<autoLayout>1 5</autoLayout>
			<autoLayoutSelectedZoom>1.65</autoLayoutSelectedZoom>
			<margin>0.005 0.06</margin>
			<centerSelection>true</centerSelection>
			<scrollLoop>true</scrollLoop>
		</imagegrid>
	
    <gridtile name="default">
	
		<backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>64 16</padding>
<!--       <backgroundCenterColor>FFFFFF00</backgroundCenterColor>
      <backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
	  <maxSize>0.37 0.45</maxSize>
      <imageColor>FFFFFFAA</imageColor>
      <reflexion>0 0</reflexion> -->
    </gridtile>
    <gridtile name="selected">
      <backgroundCenterColor>ffffffff</backgroundCenterColor>
      <backgroundEdgeColor>ffffff00</backgroundEdgeColor>
	  <imageColor>FFFFFFFF</imageColor>
      <padding>60 20</padding>
    </gridtile>
    <text name="gridtile">
      <visible>false</visible>
      <color>80808080</color>
      <fontSize>0.016</fontSize>
      <size>0.5 0</size>
    </text>
    <text name="gridtile:selected">
      <color>FFFFFF00</color>
      <fontSize>0.035</fontSize>
      <size>0.6 0</size>
    </text>
		<ninepatch name="gridtile.background:selected">
			<animateColor>5fc9f8B0</animateColor>
			<animateColorTime>450</animateColorTime>
			<path>./art/marcador.png</path>
		</ninepatch> 

  </customView>
			
	<view name="detailed">
	
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
			<maxSize>0.35 0.46</maxSize>
			<pos>0.75 0.4</pos>
			<zIndex>3</zIndex>
		</image>
	
		<video name="md_video">
			<maxSize>0.35 0.44</maxSize>
			<pos>0.755 0.4</pos>
			<delay>0.5</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<zIndex>3</zIndex>
		</video>
	
		<!-- Fondo gamelist -->
		
		<image name="backgroundfilter" extra="true">		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/gamelist 2.png</path>
			<zIndex>1</zIndex>			
		</image>
		
		<!-- Logo sistema -->
		
		<image name="logo" extra="false">		
			<path>./art/logos/${system.theme}.png</path>
			<pos>0.75 0.02</pos>
			<size>0.25 0.1</size>
			<zIndex>2</zIndex>			
		</image>
	
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">
			<selectorImagePath>./art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>719CC6</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<fontPath>./art/moonhouse.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.03</fontSize>
			<alignment>left</alignment>
			<pos>0.07 0.18</pos>
			<size>0.435 0.75</size>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<scrollSound>./art/scroll.wav</scrollSound>
			<zIndex>3</zIndex>				
		</textlist>

		<!-- Metadatos -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/moonhouse.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.04</size>
			<zIndex>3</zIndex>
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/moonhouse.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.2 0.04</size>
			<zIndex>3</zIndex>
		</text>

		<!-- Descripcion juego -->
		
		<text name="md_description">
			<color>00d2f3</color>
			<pos>0.57 0.79</pos>
			<size>0.38 0.13</size>
			<fontPath>./art/moonhouse.ttf</fontPath>
			<fontSize>0.018</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>3</zIndex>			
		</text>
		
		<!-- Posiciones info juegos -->
		
		<text name="md_lbl_rating">
			<pos>0.57 0.65</pos>
		</text>
		
		<rating name="md_rating">
			<pos>0.58 0.69</pos>
			<size>0.028 0.028</size>
			<filledPath>./art/get-hot-1.png</filledPath>
			<unfilledPath>./art/get-hot-0.png</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.57 0.72</pos>
		</text>
		
		<text name="md_players">
			<pos>0.58 0.75</pos>			
		</text>
			
		<text name="md_lbl_genre">
			<pos>0.7 0.65</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.71 0.685</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.7 0.72</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.71 0.75</pos>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
	<!-- Opciones de vista para Cuadricula -->
	
	<subset name="videoboxes" displayName="${videoboxesSubsetName}" appliesTo="Boxes,grid">
		<include name="no" displayName="${no}"/>
		<include name="yes" displayName="${yes}">./art/grid/videoboxes.xml</include>
	</subset>
	
	<subset name="zoomboxes" displayName="${zoomboxesSubsetName}" appliesTo="Boxes,grid">
		<include name="no" displayName="${no}"/>
		<include name="yes" displayName="${yes}">./art/grid/zoomboxes.xml</include>
	</subset>
	
	<subset name="scrolldirection" displayName="Orientation" appliesTo="Tiles,Boxes,grid">
		<include name="vertical"/>
		<include name="horizontal">./art/grid/scrollhorz.xml</include>
	</subset>
	
	<subset name="hideselection" displayName="${hideselectionSubsetName}" appliesTo="Boxes,grid">
		<include name="yes" displayName="${yes}">./art/grid/hidesel.xml</include>
		<include name="no" displayName="${no}"/>
	</subset>
	
	<subset name="previewbar" displayName="${previewBarSubsetName}" appliesTo="Tiles,Carousel,Boxes,grid">
		<include name="yes" displayName="${yes}">./art/grid/previewbar.xml</include>
		<include name="no" displayName="${no}"/>
	</subset>

	<!-- Subset options for Tiles view -->
	<subset name="tileborders" displayName="${roundBorderSubsetName}" appliesTo="Tiles">
		<include name="yes" displayName="${yes}"/>
		<include name="no" displayName="${no}">./art/tiles/squareborders.xml</include>
	</subset>
	
	<subset name="blinkborders" displayName="${blinkBorderSubsetName}" appliesTo="Tiles,Carousel,Boxes,grid">
		<include name="yes" displayName="${yes}"/>
		<include name="no" displayName="${no}">./art/grid/blinkbordersoff.xml</include>
	</subset>
	
	<subset name="videotiles" displayName="Videos" appliesTo="Tiles">
		<include name="yes" displayName="${yes}"/>
		<include name="no" displayName="${no}">./art/tiles/novideo.xml</include>
	</subset>
	
	<subset name="marqueetiles" displayName="Logos" appliesTo="Tiles">
		<include name="yes" displayName="${yes}">./art/tiles/marquee.xml</include>
		<include name="no" displayName="${no}"/>
	</subset>
	
</theme>
